<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<http auto-config="true">
		<intercept-url access="IS_AUTHENTICATED_ANONYMOUSLY" pattern="/loginPage" />
		<intercept-url access="IS_AUTHENTICATED_ANONYMOUSLY" pattern="/resources/**" />
		<intercept-url access="IS_AUTHENTICATED_ANONYMOUSLY" pattern="/OlvidoContrasena/**" />
		<intercept-url access="IS_AUTHENTICATED_ANONYMOUSLY" pattern="/Pedidos/**" />
		<intercept-url pattern="/Proveedores/**" access="ROLE_EMPLEADO" />
		<intercept-url pattern="/MiPerfil/**" access="ROLE_EMPLEADO" />
		<intercept-url pattern="/Pedidos/**" access="ROLE_EMPLEADO" />
		<intercept-url pattern="/Consultar/**" access="ROLE_EMPLEADO" />
		<intercept-url pattern="/**" access="ROLE_ADMINISTRADOR" />
		<form-login login-processing-url="/login"
			login-page="http://10.0.1.8:8080/BackOffice/Tiendas/Acceso"
			username-parameter="username" password-parameter="password"
			default-target-url="/Proveedores/" always-use-default-target="true"
			authentication-failure-url="/loginPage?auth=fail" />
		<logout logout-url="/logout" logout-success-url="http://10.0.1.8:8080/BackOffice/Tiendas/Acceso" />
		<access-denied-handler error-page="/403" />
	</http>

	<beans:bean id="proveedorDeAutenticacion"
		class="com.ts.configuracion.ProveedorDeAutenticacion" />

	<authentication-manager alias="authenticationManager">
		<authentication-provider ref="proveedorDeAutenticacion" />
	</authentication-manager>

</beans:beans>